@model List<Facility>

@{
    ViewData["Title"] = "Facilities";
}

<h1>Facilities</h1>

<div class="container">
    <div class="row pb-2">
        <div class="col-6">
           
        </div>    
        <div class="col-6 text-end">
            <a asp-controller="Facility" asp-action="Create" class="btn btn-outline-primary">
                <i class="bi bi-plus"></i> Add New
            </a>
        </div>
    </div>


    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    Facility Name
                </th>
                <th>
                    Location
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                var numb = 1;


                        @foreach (var facility in Model)
                {
                            <tr>
                                <td>@numb</td>
                                <td>@facility.FacilityName</td>
                                <td>@facility.Location</td>
                                <td style="width:75px;justify-content:center;">
                                    <div class="w-75 btn-group">
                                <a asp-controller="Facility" asp-action="Edit" asp-route-id="@facility.FacilityId" class="btn btn-outline-success">
                                            <i class="bi bi-pencil-square"></i>
                                        </a> &nbsp;&nbsp;
                                <a asp-controller="Facility" asp-action="Delete" asp-route-id="@facility.FacilityId" class="btn btn-outline-danger">
                                            <i class="bi bi-trash-fill"></i>
                                        </a> 
                                    </div>
                                </td>
                            </tr>
                
                    numb = numb + 1;
                
                }
            }

        </tbody>
    </table>
</div>
