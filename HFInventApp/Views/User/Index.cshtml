@using HFInventApp.ViewModels

@model List<vmUsers>

@{
    ViewData["Title"] = "Manage Users";
}

<h1>Manage Users</h1>

<div class="container">
    @if (User.IsInRole(RoleSD.Role_Admin1))
    {
        <div class="row pb-2">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="User" asp-action="Create" class="btn btn-outline-primary">
                    <i class="bi bi-plus"></i> Add New User
                </a>
            </div>
        </div>
    }

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    Full Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    Phone
                </th>
                <th>
                    Job Title
                </th>
                <th>
                    Assigned Facility
                </th>
                <th>
                    Role
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                var numb = 1;


                @foreach (var user in Model)
                {
                    <tr>
                        <td>@numb</td>
                        <td>@user.UserInfo.FullName</td>
                        <td>@user.UserInfo.Email</td>
                        <td>@user.UserInfo.PhoneNumber</td>
                        <td>@user.UserInfo.JobTitle</td>
                        <td>@user.FacilityName</td>
                        <td>@user.Role</td>
                        <td style="width:75px;justify-content:center;">
                            <div class="w-75 btn-group">
                                <a asp-controller="User" asp-action="Edit" asp-route-id="@user.UserInfo.Id" class="btn btn-outline-success">
                                    <i class="bi bi-pencil-square"></i>
                                </a> &nbsp;&nbsp;
                                <a asp-controller="User" asp-action="Delete" asp-route-id="@user.UserInfo.Id" class="btn btn-outline-danger">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </div>
                        </td>
                    </tr>

                    numb = numb + 1;

                }
            }

        </tbody>
    </table>
</div>
