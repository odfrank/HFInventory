@model vmUsers

@{
    ViewData["Title"] = "Create User";
}

<h1>Add New User by Admin</h1>

<form method="post">
    @*    //<input asp-for="@Model.UserInfo.Id" hidden />
    *@
    <div class="border p-3 mt-4">
        <div class="mb-3 row p-1">
            <label asp-for="@Model.UserInfo.FullName" class="p-0"></label>
            <input asp-for="@Model.UserInfo.FullName" class="form-control" />
            <span asp-validation-for="@Model.UserInfo.FullName" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="@Model.UserInfo.JobTitle" class="p-0"></label>
            <input asp-for="@Model.UserInfo.JobTitle" class="form-control" />
            <span asp-validation-for="@Model.UserInfo.JobTitle" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="@Model.UserInfo.Email" class="p-0"></label>
            <input asp-for="@Model.UserInfo.Email" class="form-control" />
            <span asp-validation-for="@Model.UserInfo.Email" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="@Model.Password" class="p-0"></label>
            <input asp-for="@Model.Password" class="form-control" />
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
        </div>

        @*<div class="form-floating mb-3 col-md-6">
            <input asp-for="@Model.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="enter password" />
            <label asp-for="@Model.Password" class="ms-2 text-muted"></label>
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3 col-md-6">
            <input asp-for="@Model.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="enter password" />
            <label asp-for="@Model.Password" class="ms-2 text-muted"></label>
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
        </div>*@

        <div class="mb-3 row p-1">
            <label asp-for="@Model.UserInfo.PhoneNumber" class="p-0"></label>
            <input asp-for="@Model.UserInfo.PhoneNumber" class="form-control" />
            <span asp-validation-for="@Model.UserInfo.PhoneNumber" class="text-danger"></span>
        </div>


        @*
        //Add code section here for Lock/Unlock User
        <div class="mb-3 row p-1">
        <label asp-for="FacilityId" class="p-0"></label>
        <input asp-for="FacilityId" class="form-control" />
        <span asp-validation-for="FacilityId" class="text-danger"></span>
        </div>*@

        <div class="mb-3 row p-1">
            <label class="p-0">User Facility</label>
            <select asp-for="@Model.FacilityId" asp-items="ViewBag.FacilitySelectList" class="form-select p-0">
                <option selected>--Choose Facility--</option>
            </select>
            <span asp-validation-for="@Model.FacilityId" class="text-danger"></span>
        </div>

        @if (User.IsInRole(RoleSD.Role_Admin1))
        {
            <div class="mb-3 row p-1">
                <label class="p-0">User Role</label>
                <select asp-for="@Model.RoleId" asp-items="ViewBag.RoleSelectList" class="form-select p-0">
                    <option selected>--Choose Role--</option>
                </select>
                <span asp-validation-for="@Model.RoleId" class="text-danger"></span>
            </div>
        }

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create New User</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="User" asp-action="Index" class="btn btn-outline-dark border-2 form-control">
                    Back To List
                </a>
            </div>
        </div>


    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }