@model ApplicationUser

@{
    ViewData["Title"] = "Delete User";
}

<h1>Delete User</h1>

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="mb-3 row p-1">
            <label asp-for="FullName" class="p-0"></label>
            <input asp-for="FullName" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="JobTitle" class="p-0"></label>
            <input asp-for="JobTitle" disabled class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete User</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="User" asp-action="Index" class="btn btn-outline-dark border-2 form-control">
                    Back To List
                </a>
            </div>
        </div>
    </div>
</form>