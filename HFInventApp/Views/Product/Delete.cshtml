@model Product

@{
    ViewData["Title"] = "Delete Product";
}

<h1>Delete Product</h1>

<form method="post">
    <input asp-for="ProductId" hidden />
    <div class="border p-3 mt-4">
        <div class="mb-3 row p-1">
            <label asp-for="ProductName" class="p-0"></label>
            <input asp-for="ProductName" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="ProductDescription" class="p-0"></label>
            <input asp-for="ProductDescription" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Price" class="p-0"></label>
            <input asp-for="Price" disabled class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete Product</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-dark border-2 form-control">
                    Back To List
                </a>
            </div>
        </div>
    </div>
</form>